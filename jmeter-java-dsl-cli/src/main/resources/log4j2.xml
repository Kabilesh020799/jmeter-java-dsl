<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_ERR">
      <PatternLayout pattern="%5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>
    <Logger name="org.apache.jmeter" level="ERROR"/>
    <Logger name="com.blazemeter.jmeter.correlation.core.templates" level="ERROR"/>
    <Logger name="org.apache.jmeter.protocol.http.proxy.Proxy" level="ERROR">
      <!-- Ignore broken pipe generated by browser closing connection, which implies that
        sample is not relevant-->
      <ScriptFilter onMatch="DENY" onMisMatch="ACCEPT">
        <Script name="brokenPipeFilter" language="javascript"><![CDATA[
          logEvent.getThrown() instanceof java.net.SocketException && logEvent.getThrown().getMessage().startsWith("Broken pipe")
        ]]></Script>
      </ScriptFilter>
    </Logger>
    <Logger name="org.apache.jorphan.exec.KeyToolUtils" level="ERROR"/>
    <Logger name="org.openqa.selenium" level="ERROR"/>
  </Loggers>
</Configuration>